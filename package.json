{
  "name": "music-exe",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --mode dev",
    "prod": "vite --mode prod",
    "build": "vite build --mode prod && electron-builder",
    "electron:generate-icons": "electron-icon-builder --input=./public/logo.png --output=build --flatten",
    "preview": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "start": "concurrently -k \"yarn dev\" \"yarn electron\""
  },
  "build": {
    "productName": "初识音乐",
    "copyright": "copyright @ 2022 GL",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "pinia": "^2.0.21",
    "pinia-plugin-persist": "^1.0.0",
    "resolve": "^1.22.1",
    "tdesign-vue-next": "^0.20.2",
    "ts-md5": "^1.3.1",
    "vue": "^3.2.37",
    "vue-qr": "^4.0.9",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/node": "^18.7.11",
    "@vitejs/plugin-vue": "^3.0.3",
    "autoprefixer": "^9.8.8",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^7.0.39",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.6.4",
    "vite": "^3.0.7",
    "vue-tsc": "^0.39.5",
    "wait-on": "^6.0.1"
  }
}
